/* pages/index/index.wxss */
.page {
  display: flex;
  flex-direction: column;
}

.main_photo {
  vertical-align: bottom
}

.navigation_container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #EFEFEF;
  padding: 2%;
}

.navigation_group {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: white; */
  width: 150rpx;
  border-right: grey solid thin;
}

.navigation_annotation {
  padding:6%;
  font-size: 25rpx
}

.bar {
  display: flex;
  /* background-color: yellow; */
  padding: 2%;
  justify-content: space-between;
  font-size: 32rpx;
  align-items: center;
  border-bottom: grey dotted thin;
}

.exhibition_detail {
  padding: 1%;
  border-left: #A38A54 solid 18rpx
}

.news_container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly
}

.news_group {
  display: flex;
  flex-direction: column;
  width: 42%;
  margin: 2.5%
}

.news_pic {
  width: 100%
}

.news_title {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 25rpx;
  margin-top: 3%
}

.worksCited {
  font-size: 25rpx
}